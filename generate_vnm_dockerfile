# use most recent versions of packages available through neurodocker
sudo docker run --rm kaczmarj/neurodocker:0.6.0 generate docker \
  --base debian:stretch \
  --pkg-manager apt \
  --afni version=latest \
  --ants version=2.3.1 \
  --freesurfer version=6.0.0-min \
  --fsl version=5.0.11 \
  --matlabmcr version=2018a \
  --mrtrix3 version=3.0_RC3 \
  > Dockerfile
